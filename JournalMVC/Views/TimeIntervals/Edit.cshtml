@model JournalMVC.DTO.TimeIntervalDTO

@{
    ViewData["Title"] = "Изменить";
}

<h1>Изменить</h1>

<h4>Временной интервал</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="StartActivity" class="control-label">Начало занятия</label>
                <input asp-for="StartActivity" class="form-control" />
                <span asp-validation-for="StartActivity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndActivity" class="control-label">Конец занятия</label>
                <input asp-for="EndActivity" class="form-control" />
                <span asp-validation-for="EndActivity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
