@model JournalMVC.DTO.TimeIntervalDTO

@{
    ViewData["Title"] = "Удаление";
}

<h1>Удаление</h1>

<h3>Вы уверены, что хотите удалить это?</h3>
<div>
    <h4>TimeInterval</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Начало занятия
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartActivity)
        </dd>
        <dt class = "col-sm-2">
            Конец занятия
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndActivity)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>
