@model JournalMVC.DTO.TimeIntervalDTO

@{
    ViewData["Title"] = "Создать";
}

<h1>Создать</h1>

<h4>Временной интервал</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <div class="form-group">
                <div class="col-md-10">
                    <label asp-for="StartActivity" class="control-label">Начало занятия</label>
                    <input asp-for="StartActivity" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <label asp-for="EndActivity" class="control-label">Конец занятия</label>
                    <input asp-for="EndActivity" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
