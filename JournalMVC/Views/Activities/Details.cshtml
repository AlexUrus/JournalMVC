@model JournalMVC.DTO.DetailsActivitiesDTO

@{
    ViewData["Title"] = "Детали";
}

<h1>Детали</h1>

<div>
    <h4>Занятие</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Тип занятия
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TypeActivity)
        </dd>
        <dt class = "col-sm-2">
            Среднее в день время потраченное на занятие
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AverrageTimePerDay)
        </dd>
        <dt class="col-sm-2">
            Общее время потраченное на занятие
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalTime)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a> |
    <a asp-action="Index">Назад к списку</a>
</div>
