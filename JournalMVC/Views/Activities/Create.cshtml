@model JournalMVC.DTO.ActivityDTO

@{
    ViewData["Title"] = "Create";
    var selectedDate = ViewBag.SelectedDate ?? DateTime.Now;
}

<h1>Create</h1>

<h4>Activity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="TypeId" class="form-control" asp-items="ViewBag.TypeActivities"></select>
            </div>
            <div class="form-group">
                <label asp-for="TimeInterval" class="control-label"></label>
                <select asp-for="TimeIntervalId" class="form-control" asp-items="ViewBag.TimeIntervals"></select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <input type="hidden" name="selectedDate" value="@selectedDate.ToString("yyyy-MM-ddTHH:mm:ss")" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}